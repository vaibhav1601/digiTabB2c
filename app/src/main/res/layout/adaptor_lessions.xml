<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_gray_card_border_layout"
    android:orientation="vertical"
    android:padding="4dp">


    <RelativeLayout
        android:id="@+id/rl_lessions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="31dp">


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_lessions_header"
            style="@style/custom_font_roboto_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/thumbnail"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="15dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="efhghekgf "
            android:textColor="#333333"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/txt_lessions_header"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="15dp"
            android:animateFirstView="true"
            android:background="@color/light_gray_background">

        </View>


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_status"
            style="@style/custom_font_roboto_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_lessions_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:drawableLeft="@drawable/ic_report_red_24dp"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center"
            android:text="size:1.2 MB,Last modified 11/08/2018  "
            android:textColor="@color/text_color"
            android:textSize="12dp" />


    </RelativeLayout>


</LinearLayout>

                android:clickable="true"
                android:src="@drawable/angel_logo" />-->

            <TextView
                android:id="@+id/title"
                style="@style/custom_font_roboto_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="efhghekgf"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/count"
                style="@style/custom_font_roboto_italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:text="hsdjgfsjhdgf"
                android:textSize="@dimen/_8sdp" />


            <ImageView
                android:id="@+id/shareVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/count"
                android:layout_marginTop="@dimen/_100sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:scaleType="centerCrop"
                card_view:srcCompat="@drawable/ic_share_black_24dp" />



<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <SearchView
        android:id="@+id/simpleSearchView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerVertical="false"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/_40sdp"
        android:autofillHints="Search"
        android:clickable="true"
        android:gravity="center"
        android:iconifiedByDefault="true"
        android:queryHint="Search" />


    <ImageView
        android:id="@+id/imgvoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="-70dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/simpleSearchView"
        app:srcCompat="@drawable/ic_settings_voice_black_24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/imgvoice"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="9dp"
        android:animateFirstView="true"
        android:background="@color/light_gray_background">

    </View>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_faq"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/simpleSearchView"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginBottom="20dp"
        android:clipToPadding="true"
        android:scrollbars="vertical" />

</RelativeLayout>
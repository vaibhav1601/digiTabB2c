<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lauout_main"
    style="@style/AppTheme.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_bestpolicy"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="37dp"
        android:foregroundGravity="center_horizontal"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="@dimen/_5sdp"
        card_view:cardElevation="@dimen/_1sdp"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:layout_centerInParent="true"
            android:background="@drawable/custom_drawable_light_gray_border_with_white_fill"
            android:orientation="vertical">

            <TextView
                style="@style/custom_font_roboto_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_21sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginRight="@dimen/_21sdp"
                android:gravity="center"
                android:text="ENTER YOUR DETAILS"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/login_password_et"
                style="@style/custom_font_roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_22sdp"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
                android:drawableRight="@drawable/ic_person_outline_black_24dp"
                android:hint="employee Id"
                android:inputType="text"
                android:singleLine="true" />

            <EditText
                android:id="@+id/password_et"
                style="@style/custom_font_roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_22sdp"
                android:drawableRight="@drawable/ic_lock_outline_black_24dp"
                android:hint="Password"
                android:inputType="textPassword|textCapWords"
                android:singleLine="true" />

            <TextView
                android:id="@+id/forgetpass"
                style="@style/custom_font_roboto_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_22sdp"
                android:layout_marginBottom="@dimen/_22sdp"
                android:text="forgot password"
                android:textAlignment="center"
                android:textColor="@color/blue_color"
                android:textSize="@dimen/_6sdp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnProceedPolicy"
                style="@style/custom_font_roboto_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/button_color"
                android:gravity="center_horizontal|center"
                android:text="Login"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>


    </android.support.v7.widget.CardView>


</android.support.v7.widget.LinearLayoutCompat>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lauout_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:elevation="@dimen/_2sdp"
        card_view:cardCornerRadius="6dp">


        <RelativeLayout
            android:id="@+id/rl_faq"
            android:layout_width="match_parent"
            android:layout_height="140dp">


            <ImageView
                android:id="@+id/img_faq"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="1dp"
                android:clickable="true"
                android:foregroundGravity="center_horizontal"
                android:scaleType="center"
                android:visibility="visible"
                card_view:srcCompat="@drawable/angel_logo" />


            <TextView
                android:id="@+id/txt_faqname"
                style="@style/custom_font_roboto_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_faq"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="efhghekgf "
                android:textColor="#333333"
                android:textSize="15sp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</android.support.v7.widget.LinearLayoutCompat>

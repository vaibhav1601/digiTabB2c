<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/custom_drawable_light_gray_border_with_white_fill">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtquestions"
            style="@style/custom_font_roboto_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Learn"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />


        <TextView
            android:id="@+id/textView1"
            style="@style/custom_font_roboto_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="What is mutual fund ?"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp"
            android:visibility="visible" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_drawable_light_gray_border_with_white_fill">

            <TextView
                android:id="@+id/textView2"
                style="@style/custom_font_roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="19dp"
                android:gravity="center"
                android:text="Yours Score "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:orientation="vertical">

                <z_aksys.solutions.digiappequitybb.custmization.CircularSeekBar
                    android:id="@+id/progress_circular_mark"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center"
                    android:thumb="@drawable/ic_bee_new"
                    app:circle_x_radius="@dimen/_100sdp"
                    app:circle_y_radius="@dimen/_100sdp"
                    app:end_angle="270"
                    app:max="100"
                    app:pointer_alpha_ontouch="100"
                    app:pointer_halo_color="#88d9dbdc"
                    app:start_angle="270"
                    app:use_custom_radii="true" />


            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_percent"
                style="@style/custom_font_roboto_bold"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_alignLeft="@id/center"
                android:layout_alignTop="@id/center"
                android:layout_alignRight="@id/center"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="60%"
                android:textColor="#008464"
                android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/center"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView3"
                            style="@style/custom_font_roboto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:gravity="center_horizontal"
                            android:paddingBottom="20dp"
                            android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit."
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/myTotalAnswers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:paddingRight="5dp"
                        android:text="50/100"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:visibility="gone" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/mainContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="23dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/check_results"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/button_color"
                android:text="LATER"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnMainMenu"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/button_color"
                android:text="RETRY"
                android:visibility="gone" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_bg"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/card_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:clickable="true"
        android:elevation="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_61sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:clickable="true"
                android:src="@drawable/angel_logo" />


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/video_duration_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/title"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-90dp"
                android:layout_marginBottom="11dp"
                android:layout_toRightOf="@+id/thumbnail"
                android:gravity="center_vertical|end"
                android:src="@drawable/ic_play_circle_outline_white_new_24dp" />


            <!-- &lt;!&ndash; youtube thumbnail view to show the thumbnail of videos &ndash;&gt;-->
            <com.google.android.youtube.player.YouTubeThumbnailView
                android:id="@+id/video_thumbnail_image_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_61sdp"
                android:contentDescription="img disc"
                android:scaleType="centerCrop"
                android:visibility="gone" />


            <TextView
                android:id="@+id/title"
                style="@style/custom_font_roboto_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="efhghekgf"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/count"
                style="@style/custom_font_roboto_italic"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="hsdjgfsjhdgf"
                android:textSize="@dimen/_6sdp" />

            <!-- <ImageView
                 android:id="@+id/overflow"
                 android:layout_width="@dimen/ic_album_overflow_width"
                 android:layout_height="@dimen/ic_album_overflow_height"
                 android:layout_alignParentRight="true"
                 android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
                 android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                 android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
                 android:scaleType="centerCrop"
                 android:src="@drawable/ic_menu_share" />-->

            <!--  <TextView
                  android:id="@+id/video_duration_label1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:layout_alignParentRight="true"
                  android:layout_marginLeft="@dimen/_10sdp"
                  android:layout_marginStart="@dimen/_10sdp"
                  style="@style/custom_font_roboto_regular"
                  android:drawableLeft="@drawable/ic_query_builder_black_24dp"
                  android:gravity="center_vertical|end"
                  android:textColor="@android:color/primary_text_light"
                  android:textSize="@dimen/_12sdp" />-->


            <ImageView
                android:id="@+id/overflow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/count"
                android:layout_marginTop="@dimen/_110sdp"
                android:layout_marginRight="-130dp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_menu_share"
                android:visibility="invisible" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
